<h1 class="text-center mb-4">Welcome to my todolist app</h1>
<%= render 'layouts/task_form'  %>
<div class="container">
  <ul class="nav nav-pills">
    <li class="nav-item">
      <% @categories.each do |category|%>
        <a class="category-title nav-link"><%= category.title %></a>
        <div class="card">
          <ul class="category-content" id="<%= category.id %>">
            <% category.tasks.each do |task| %>
            <li id="task <%= task.created_at %>">
              <%= link_to(task_path(task), method: :delete, remote: true) do %>
                <i class="far fa-trash-alt text-muted"></i>
              <% end %>
              <%= task.title %>
              <% unless task.deadline.nil? %>
                , to read: <%= task.deadline.strftime('%D') %>
              <% end %>
            </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </li>
  </ul>
</div>

<div class="container">
  <div class="row">
    <% @tasks.each do |task|  %>
      <div class="card col-3">
        <% unless task.image.nil? %>
          <%= image_tag task.image, class: "rounded-circle" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>