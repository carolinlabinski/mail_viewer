if(document.getElementById("btn read <%= @email.id %>").textContent === "Marquer comme lu"){
  document.getElementById("btn read <%= @email.id %>").textContent = "Marquer comme non-lu";
  document.getElementById("email <%= @email.id %>").childNodes[0].style.fontWeight = "300";
